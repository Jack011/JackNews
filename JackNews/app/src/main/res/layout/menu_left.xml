<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="15dp"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_icon"
            android:text="JACK"
            android:textSize="20sp"
            android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/user_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/user_icon"
        android:layout_below="@id/user_name"
        android:text="爵位：男爵"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/user_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/user_icon"
        android:layout_below="@id/user_grade"
        android:text="积分：100"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/person_word"
        android:layout_below="@id/user_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="我想知道今天的世界是啥样子..."
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/me_line0"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_below="@id/person_word"
        android:background="#c9c9c9"/>
    <TextView
        android:id="@+id/user_love"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/me_line0"
        android:text="我的偏好"
        android:padding="10dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/me_line1"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_below="@id/user_love"
        android:background="#c9c9c9"/>
    <TextView
        android:id="@+id/user_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/me_line1"
        android:text="我的收藏"
        android:padding="10dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/me_line2"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_below="@id/user_pick"
        android:background="#c9c9c9"/>
    <TextView
        android:id="@+id/user_say"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/me_line2"
        android:text="我的评论"
        android:padding="10dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/me_line3"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_below="@id/user_say"
        android:background="#c9c9c9"/>
    <TextView
        android:id="@+id/user_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/me_line3"
        android:text="我的设置"
        android:padding="10dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/me_line4"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_below="@id/user_set"
        android:background="#c9c9c9"/>
    <TextView
        android:id="@+id/user_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/me_line4"
        android:text="版本更新"
        android:padding="10dp"
        android:textSize="20sp"/>


</RelativeLayout>